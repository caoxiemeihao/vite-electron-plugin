{
  "name": "vite-electron-plugin",
  "version": "0.6.0",
  "description": "High-performance, esbuild-based Vite Electron plugin",
  "main": "index.js",
  "types": "types",
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./index.js"
    },
    "./plugin": {
      "import": "./plugin/index.mjs",
      "require": "./plugin/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electron-vite/vite-electron-plugin.git"
  },
  "author": "草鞋没号 <308487730@qq.com>",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "types": "rm -rf types && tsc -p tsconfig.build.json && tsc -p tsconfig.plugin.json",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "esbuild": "*"
  },
  "dependencies": {
    "fast-glob": "^3.2.12",
    "notbundle": "~0.3.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "esbuild": "^0.16.10",
    "rollup": "^3.7.5",
    "typescript": "^4.9.4",
    "vite": "^4.0.2"
  },
  "files": [
    "plugin/index.js",
    "plugin/index.mjs",
    "plugin/index.d.ts",
    "electron-env.d.ts",
    "types",
    "index.mjs",
    "index.js"
  ],
  "keywords": [
    "vite",
    "plugin",
    "electron",
    "unbuild"
  ]
}
